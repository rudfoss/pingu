{
	"configurations": [
		{
			"name": "TS file",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${fileBasename}"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${fileDirname}",
			"outputCapture": "std"
		},
		{
			"name": "web-client",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/web-client/scripts/dev.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/web-client",
			"outputCapture": "std"
		},
		{
			"name": "web-server",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/web-server/src/index.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/web-server",
			"outputCapture": "std"
		},
		{
			"name": "spa-client",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/spa-client/scripts/dev.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/spa-client",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "spa-server",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/spa-server/src/index.dev.ts"],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/spa-server",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "web-api",
			"type": "pwa-node",
			"request": "launch",
			"args": ["${workspaceFolder}/packages/web-api/src/index.ts"],
			"preLaunchTask": "npm: build:tsoa - packages/web-api",
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"resolveSourceMapLocations": [
				"${workspaceFolder}/**",
				"!**/node_modules/**"
			],
			"cwd": "${workspaceFolder}/packages/web-api",
			"outputCapture": "std"
		}
	],
	"compounds": [
		{
			"name": "SPA",
			"configurations": ["spa-client", "spa-server"]
		}
	]
}